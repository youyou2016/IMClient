<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/chat_content_listview_item_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/chat_content_listview_item_icon_left"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/person_normal" />
            <TextView
                android:id="@+id/chat_content_listview_item_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/chat_content_listview_item_icon_left"
                android:textSize="14sp"
                android:background="@drawable/left"
                tools:text="text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chat_content_listview_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/chat_content_listview_item_icon_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/person_normal" />

            <TextView
                android:id="@+id/chat_content_listview_item_text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/right"
                android:layout_toLeftOf="@id/chat_content_listview_item_icon_right"
                android:textSize="14sp"
                tools:text="text" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/chat_content_listview_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:textSize="10sp"
        tools:text="11:00" />

</LinearLayout>